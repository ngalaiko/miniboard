{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": "./",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "downlevelIteration": true,
        "useDefineForClassFields": true,
        "typeRoots" : ["./src/@types"],
    },
    "include": [
        "src/**/*"
    ],
}
